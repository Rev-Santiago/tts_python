# Server Configuration
HOST=0.0.0.0
PORT=8010

# TTS Engine Selection
# Options: "piper" or "qwen3"
TTS_ENGINE=qwen3

# Piper TTS Settings
DEFAULT_VOICE=en_US-libritts-high
MODELS_DIR=models
PIPER_EXECUTABLE=piper

# Qwen3-TTS Settings (when TTS_ENGINE=qwen3)
QWEN3_SERVER_URL=http://192.168.3.100:8880
QWEN3_VOICE=Vivian
QWEN3_LANGUAGE=Auto
QWEN3_FORMAT=pcm

# Hybrid Mode (use Piper for visemes even with Qwen3 audio)
# Note: Qwen3 doesn't provide viseme data - HYBRID_MODE not yet implemented
HYBRID_MODE=false

# Audio Configuration
SAMPLE_RATE=22050
CHUNK_SIZE=2048
